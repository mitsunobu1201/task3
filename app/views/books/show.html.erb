<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
        <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
        <tr>
	        <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
	        <th>introduction</th>
	        <th><%= @user.introduction %></th>
	        <th></th>
        </tr>
      </table>

    <div class='row'>
      <%= link_to edit_user_path(@user.id), class:'btn btn-outline-secondary btn-block' do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
    </div>

    <h2 class="mt-3">New book</h2>
    <%= form_with model: @book do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title,class:"form-control book_title" %>
    </div>
    <div class="form-group">
      <label for="book_body">Opinion</label>
      <%= f.text_field :body,class:"form-control book_title" %>
    </div>
    <div class="form-group">
      <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />
      <% end %>
    </div>
  </div>


  <div class='col-md-8 offset-md-1'>
  	<h2>Book detail</h2>
    	<table class='table'>
    		<tr>
    		  <td><%= image_tag @user.get_profile_image(100,100) %><br>
              <%= link_to @user.name,user_path(@user) %></td>
            <td><%= link_to @books.title, book_path(@books) %></td>
            <td><%= @books.body %></td>
            <% if @books.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@books), class:"btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %></td>
            <% end %>
      </table>
    </div>
  </div>
</div>
