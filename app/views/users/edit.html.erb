<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <h1>User info</h1>
    <% if @user.errors.any? %>
  <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><p><%= message %></p></li>
     
    <% end %>
  </ul>  
     <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName"%><br>
        </div>
        <div class="form-group">
          <label for="inputProfile_image">image</label><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
        </div>
        <div class="form-group">
          <label for=inputIntroduction>Introduction</label><br>
          <%= f.text_area :introduction %><br>
        <div class="form-group">
          <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User" />
        </div>
      <% end %>

    </div>
  </div>
</div>